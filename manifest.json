{
  "name": "+1s",
  "author": "WangZhe",
  "version": "1.1",
  "manifest_version": 2,
  "background": {
    "scripts": [
      "js/contextMenus.js"
    ]
  },
  "browser_action": {
    "default_title": "+1s",
    "default_popup": "html/popup.html"
  },
  "content_scripts": [
    {
      "all_frames": true,
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "js/libmath.js",
        "js/libimage.js",
        "js/libjson.js"
      ]
    },
    {
      "matches": [
        "*://jiaowu.swjtu.edu.cn/service/login.jsp*",
        "*://jiaowu.swjtu.edu.cn//service/login.jsp*"
      ],
      "js": [
        "js/student.js"
      ]
    },
    {
      "matches": [
        "*://jiaowu.swjtu.edu.cn/servlet/UserLoginSQLAction",
        "*://jiaowu.swjtu.edu.cn//servlet/UserLoginSQLAction"
      ],
      "js": [
        "js/bounce.js",
        "js/advertise.js",
        "js/studentclicked.js"
      ]
    },
    {
      "matches": [
        "*://dean.swjtu.edu.cn/service/login.jsp*"
      ],
      "js": [
        "js/genearch.js"
      ]
    },
    {
      "all_frames": true,
      "matches": [
        "*://service.swjtu.edu.cn:*/selfservice*"
      ],
      "js": [
        "js/network.js"
      ]
    }
  ],
  "permissions": [
    "contextMenus",
    "storage",
    "http://wangzhe.cloud/*"
  ],
  "icons": {
    "48": "images/icon.png"
  },
  "web_accessible_resources": [
    "data/*.*",
    "images/*.png"
  ]
}

